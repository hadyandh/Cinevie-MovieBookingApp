<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rounded_bottom_primary"
    tools:context=".ui.home.setting.SettingFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/msemibold"
        android:text="@string/settings_title"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/mlight"
        android:text="@string/setting_sub_title"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_photo_user_setting"
        android:layout_marginTop="40dp"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/user_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"/>

    <TextView
        android:id="@+id/tv_name_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/mregular"
        android:lineSpacingExtra="5dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        tools:text="Hadyan Putra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_photo_user_setting" />

    <TextView
        android:id="@+id/tv_username_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/mlight"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:text="hunhun"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_setting" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:paddingStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_username_setting">

        <TextView
            android:id="@+id/menu_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:paddingBottom="16dp"
            android:fontFamily="@font/mregular"
            android:text="My Wallet"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:drawableStartCompat="@drawable/ic_wallet" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/menu_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:drawablePadding="16dp"
            android:fontFamily="@font/mregular"
            android:text="Edit Profile"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:drawableStartCompat="@drawable/ic_account_circle" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/menu_change_languange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:drawablePadding="16dp"
            android:fontFamily="@font/mregular"
            android:text="Change Languange"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:drawableStartCompat="@drawable/ic_flag" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/menu_sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:drawablePadding="16dp"
            android:fontFamily="@font/mregular"
            android:text="Sign Out"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:drawableStartCompat="@drawable/ic_sign_out" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>